    <script>
        // Market Opportunity Chart
        const marketCtx = document.getElementById('marketChart').getContext('2d');
        
        new Chart(marketCtx, {
            type: 'bar',
            data: {
                labels: ['Global Trading', 'Quantum Computing', 'Fintech Innovation', 'Harmonic Trading'],
                datasets: [{
                    label: 'Market Size ($ Billions)',
                    data: [6600, 65, 310, 5],
                    backgroundColor: [
                        'rgba(255, 215, 0, 0.7)',
                        'rgba(138, 43, 226, 0.7)',
                        'rgba(0, 255, 255, 0.7)',
                        'rgba(255, 255, 255, 0.7)'
                    ],
                    borderColor: [
                        'rgba(255, 215, 0, 1)',
                        'rgba(138, 43, 226, 1)',
                        'rgba(0, 255, 255, 1)',
                        'rgba(255, 255, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#FFFFFF'
                        },
                        title: {
                            display: true,
                            text: 'Market Size ($ Billions)',
                            color: '#FFFFFF'
                        }
                    },
                    x: {
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#FFFFFF'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: 'Market Opportunity (2025)',
                        color: '#FFD700',
                        font: {
                            size: 16
                        }
                    }
                }
            }
        });
        
        // Revenue Projection Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        
        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: ['Q4 2025', 'Q1 2026', 'Q2 2026', 'Q3 2026', 'Q4 2026', 'Q1 2027'],
                datasets: [{
                    label: 'Monthly Revenue ($K)',
                    data: [175, 350, 650, 950, 1200, 1500],
                    borderColor: '#FFD700',
                    backgroundColor: 'rgba(255, 215, 0, 0.1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#FFFFFF',
                            callback: function(value) {
                                return '$' + value + 'K';
                            }
                        }
                    },
                    x: {
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#FFFFFF'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: 'Projected Monthly Revenue',
                        color: '#FFD700',
                        font: {
                            size: 16
                        }
                    }
                }
            }
        });
    </script>
