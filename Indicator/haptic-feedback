    <script>
        // Vibration Pattern Chart
        const ctx = document.getElementById('vibrationChart').getContext('2d');
        
        // Create gradient for chart
        const gradient = ctx.createLinearGradient(0, 0, 0, 200);
        gradient.addColorStop(0, 'rgba(0, 255, 255, 0.8)');
        gradient.addColorStop(1, 'rgba(138, 43, 226, 0.2)');
        
        // Market volatility vibration pattern data
        const vibrationChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['0s', '0.5s', '1s', '1.5s', '2s', '2.5s', '3s', '3.5s', '4s', '4.5s', '5s'],
                datasets: [{
                    label: 'High Volatility Pattern',
                    data: [0, 100, 0, 80, 0, 90, 0, 70, 0, 85, 0],
                    borderColor: '#FFD700',
                    backgroundColor: 'rgba(255, 215, 0, 0.2)',
                    borderWidth: 2,
                    tension: 0.3,
                    pointRadius: 0
                }, {
                    label: 'Low Volatility Pattern',
                    data: [0, 40, 0, 30, 0, 35, 0, 25, 0, 30, 0],
                    borderColor: '#8A2BE2',
                    backgroundColor: 'rgba(138, 43, 226, 0.2)',
                    borderWidth: 2,
                    tension: 0.3,
                    pointRadius: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#FFFFFF'
                        },
                        title: {
                            display: true,
                            text: 'Vibration Intensity',
                            color: '#FFFFFF'
                        }
                    },
                    x: {
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#FFFFFF'
                        },
                        title: {
                            display: true,
                            text: 'Time',
                            color: '#FFFFFF'
                        }
                    }
                },
                plugins: {
                    legend: {
                        labels: {
                            color: '#FFFFFF'
                        }
                    },
                    title: {
                        display: true,
                        text: 'Market-Driven Vibration Patterns',
                        color: '#FFD700',
                        font: {
                            size: 16
                        }
                    }
                }
            }
        });
