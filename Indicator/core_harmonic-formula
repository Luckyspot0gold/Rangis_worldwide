    <script>
        // Waveform visualization
        const waveformCtx = document.getElementById('waveformChart').getContext('2d');
        
        // Generate sine wave data points
        const generateSineWave = (frequency, amplitude, sampleRate, duration) => {
            const points = [];
            const totalPoints = sampleRate * duration;
            
            for (let i = 0; i < totalPoints; i++) {
                const x = i / sampleRate;
                const y = amplitude * Math.sin(2 * Math.PI * frequency * x);
                points.push({x, y});
            }
            
            return points;
        };
        
        // Generate data for 419.7Hz (current BTC frequency)
        const sineWaveData = generateSineWave(419.7, 1, 1000, 0.01);
        
        // Create chart
        const waveformChart = new Chart(waveformCtx, {
            type: 'line',
            data: {
                datasets: [{
                    label: '419.7Hz Sine Wave',
                    data: sineWaveData,
                    borderColor: '#FFD700',
                    borderWidth: 2,
                    pointRadius: 0,
                    fill: false,
                    tension: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        type: 'linear',
                        display: false
                    },
                    y: {
                        display: true,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#FFFFFF'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                },
                animation: {
                    duration: 0
                }
            }
        });
    </script>
