    <script>
        // Platform Demo Visualization
        const demoCtx = document.getElementById('platformDemo').getContext('2d');
        
        // Create platform mockup using Chart.js
        const platformDemo = new Chart(demoCtx, {
            type: 'line',
            data: {
                labels: Array.from({length: 100}, (_, i) => i),
                datasets: [{
                    label: 'Market Frequency (419.7Hz)',
                    data: Array.from({length: 100}, (_, i) => Math.sin(i/5) * 0.8),
                    borderColor: '#FFD700',
                    backgroundColor: 'rgba(255, 215, 0, 0.1)',
                    borderWidth: 3,
                    pointRadius: 0,
                    tension: 0,
                    fill: true
                }, {
                    label: 'Lambda Frequency (109.5Hz)',
                    data: Array.from({length: 100}, (_, i) => Math.sin(i/20) * 0.4),
                    borderColor: '#8A2BE2',
                    backgroundColor: 'rgba(138, 43, 226, 0.1)',
                    borderWidth: 2,
                    pointRadius: 0,
                    tension: 0,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            color: '#FFFFFF',
                            font: {
                                size: 12
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Market Mayhem Orchestration - Live Waveform',
                        color: '#FFD700',
                        font: {
                            size: 16
                        }
                    }
                },
                scales: {
                    x: {
                        display: false
                    },
                    y: {
                        display: true,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#FFFFFF'
                        }
                    }
                },
                elements: {
                    line: {
                        tension: 0.4
                    }
                }
            }
        });
    </script>
